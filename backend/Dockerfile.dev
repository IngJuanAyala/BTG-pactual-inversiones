# Dockerfile optimizado para desarrollo
FROM python:3.11-slim

# Establecer directorio de trabajo
WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copiar archivo de dependencias
COPY requirements.txt .

# Instalar dependencias de Python
RUN pip install --no-cache-dir -r requirements.txt

# Instalar debugpy para debugging remoto
RUN pip install debugpy

# Crear usuario no root para seguridad
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app
USER app

# Exponer puertos
EXPOSE 8000 8001 8002 5678

# Comando por defecto (ser√° sobrescrito por docker-compose)
CMD ["python", "-m", "uvicorn", "auth-service.main:app", "--host", "0.0.0.0", "--port", "8002", "--reload"]
